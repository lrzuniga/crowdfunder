<h1>New User</h1>

<%= form_for(@user) do |f|%>
  <%= f.label "First Name"%>
  <%= f.text_field :first_name %>
  <%= f.label "Last Name" %>
  <%= f.text_field :last_name %>
  <%= f.label "Email" %>
  <%= f.email_field :email %>
  <%= f.label "Password"%>
  <%= f.password_field :password %>
  <%= f.submit "Create Account" %>

  <% unless f.object.errors.empty? %>
    <div class="alert alert-error">
      <strong>Try again after fixing the following:</strong><br>
      <ul>
        <% f.object.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

<% end %>